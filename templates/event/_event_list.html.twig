{% for event in event_list %}

    <div class="column is-one-third">
        <div class="box">
            <h1 class="subtitle"><a href="{{ path('event_view', {id: event.id }) }}">{{ event.name }}</a></h1>
            <p>Participants: {{ event.attend|length }}</p>
            <p>Date: {{ event.date|date('d/m/Y') }}</p>
            <p>Lieu: {{ event.location }}</p>

            <br>
            <p>{{ event.description }}</p>
        </div>
    </div>

{% endfor %}