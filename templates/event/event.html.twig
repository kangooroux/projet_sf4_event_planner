{% extends '_template.html.twig' %}

{% block title %}{{ event.name }}{% endblock %}

{% block content %}
    <div class="section">
        <h1 class="title">{{ event.name }}</h1>

        {% include 'includes/flash.html.twig' %}

        <p><strong>Participants:</strong> {{ event.attend|length }}</p>
        <p><strong>Description:</strong></p>
        <p>{{ event.description }}</p>
        <p><strong>Lieu:</strong></p>
        <p>{{ event.location }}</p>
        <p><strong>Date:</strong></p>
        <p>{{ event.date|date('m/d/Y') }}</p>
        <p><strong>Organisateur:</strong> {{ event.author.pseudo }}</p>

        {% if is_granted("ROLE_USER") %}
            {{ form_start(atttend_form) }}

            {% if event.attend.contains(app.user) %}
                <button type="submit" class="button is-primary is-fullwidth">Ne plus partticiper</button>
            {% else %}
                <button type="submit" class="button is-primary is-fullwidth">Participer</button>
            {% endif %}

            {{ form_end(atttend_form) }}
        {% endif %}
    </div>

{% endblock %}